<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :title, class:"form-control", placeholder:"Title" %>
  </div>
  <br/>
  <div class="field form-group">
    <%= form.text_field :description, class:"form-control", placeholder:"Description" %>
  </div>
  <br/>
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image%>
  </div>
  <div class="field form-group">  
    <%= form.text_field :pimage, class:"form-control", placeholder:"Image", type: :hidden %>
  </div>
  <br/>
  <div class="field form-group">  
    <%= form.number_field :user_id, id: :post_user_id, class:"form-control", value:current_user.id, type: :hidden %>
  </div>
  <br/>
  <div class="field form-group">  
    <%= form.number_field :post_id, id: :post_post_id, class:"form-control", value:current_user.id, type: :hidden %>
  </div>
  <br/>
  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
  <br/>
<% end %>
